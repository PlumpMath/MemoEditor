<Window x:Class="MemoEditor.HtmlEditor2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mshe="clr-namespace:MSDN.Html.Editor;assembly=MSDN.HtmlEditorControl"
        Title="Html Editor" 
        WindowStartupLocation="CenterOwner"        
        Height="400"
        Width="700">

    <Window.InputBindings>
        <KeyBinding Command="{Binding FileSaveCommand}" Key="S" Modifiers="Ctrl" />
    </Window.InputBindings>

    <Grid>
        <mshe:HtmlEditor x:Name="HtmlEditor1" />
    </Grid>
</Window>
